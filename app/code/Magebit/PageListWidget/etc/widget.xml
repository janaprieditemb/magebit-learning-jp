<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="page_list" class="Magebit\PageListWidget\Block\Widget\PageList">
        <label translate="true">CMS Pages List</label>
        <description translate="true">A new widget that provides the possibility to place a list of CMS pages where necessary</description>
        <parameters>
            <parameter name="title" xsi:type="text" visible="true">
                <label translate="true">Title</label>
            </parameter>
            <parameter name="display_mode" xsi:type="select" required="true" visible="true">
                <label translate="true">Display mode</label>
                <options>
                    <option name="all" value="all_pages" selected="true">
                        <label translate="true">All pages</label>
                    </option>
                    <option name="specific" value="specific_pages">
                        <label translate="true">Specific pages</label>
                    </option>
                </options>
            </parameter>
            <parameter name="selected_pages" xsi:type="multiselect" required="true" visible="true" source_model="Magebit\PageListWidget\Model\Config\Source\PagesOptions">
                <label translate="true">Selected Pages</label>
                <depends>
                    <parameter name="display_mode" value="specific_pages" />
                </depends>
            </parameter>
        </parameters>
    </widget>
</widgets>
